<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="Dark" parent="Theme.Sherlock">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
    </style>
 
    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar">
        <item name="android:indeterminateProgressStyle">@style/IndeterminateProgress</item> 
        <item name="indeterminateProgressStyle">@style/IndeterminateProgress</item> 
    </style>
    
    <style name="IndeterminateProgress" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:minWidth">48dp</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
    </style>

    <style name="RecomioNewsCustomTheme" parent="@style/Theme.Sherlock.Light">
        <item name="vpiCirclePageIndicatorStyle">@style/RecomioNewsCirclePageIndicator</item>
    </style>

    <style name="RecomioNewsCirclePageIndicator">
        <item name="fillColor">#ffe84023</item>
        <item name="strokeColor">#ffe84023</item>
        <item name="strokeWidth">1dp</item>
        <item name="radius">4dp</item>
        <item name="centered">true</item>
    </style>
    
    <style name="HeaderText" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">8dip</item>
    </style>

</resources>